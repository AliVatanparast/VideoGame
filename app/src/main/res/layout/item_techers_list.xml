<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="teacher"
            type="vgame.ir.data.model.Teacher" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <vgame.ir.view.component.CircleImageviewComponent
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/course_size_medium"
            android:layout_height="@dimen/course_size_medium"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/corner_radius_normal"
            app:url="@{teacher.avatar_url}"
            tools:src="@tools:sample/avatars" />

        <vgame.ir.view.component.TextviewCell
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{teacher.user.name}"
            android:textAppearance="@style/TextNormalMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_avatar"
            tools:text="@tools:sample/first_names" />

        <vgame.ir.view.component.TextviewCell
            android:id="@+id/txt_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`کلاسها: `+teacher.coursesCount}"
            android:textAppearance="@style/TextNormalSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"
            tools:text="@tools:sample/first_names" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>